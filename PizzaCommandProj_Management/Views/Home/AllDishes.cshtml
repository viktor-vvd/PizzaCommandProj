@model IEnumerable<PizzaCommandProj_Management.Models.Dish>

@{
    ViewData["Title"] = "All Dishes";
}

<p>User: @ViewBag.User</p>
<h1>All Dishes</h1>
<p>
    @if (@ViewBag.User == "admin")
    {
        <a asp-action="NewDish">Add New Dish</a>
    }

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contain)
            </th>
            @if (@ViewBag.User == "admin")
            {
                <th width="110px"></th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            int m = 0;
        }
        @foreach (var item in Model)
        {
            m++;
        <tr>
            <td class="idd">                
                @m
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contain)
            </td>
            @if (@ViewBag.User == "admin")
            {
                <td width="110px">
                    @Html.ActionLink("Edit", "EditDish", new { dishId = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteDish", new { dishId = item.Id })
                </td>
            }
        </tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLink("Orders", "AllOrders")
</p>


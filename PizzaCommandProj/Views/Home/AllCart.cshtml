@model IEnumerable<PizzaCommandProj.Models.CartItem>

@{
    ViewData["Title"] = "AllCart";
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link rel="stylesheet" href="~/css/BuyPage.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/img/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: "Quicksand";
        }

        h3 a {
            text-decoration: none;
            position: relative;
            color: #764232;
        }

            h3 a::before {
                content: '';
                bottom: 0;
                left: 0;
                position: absolute;
                width: 100%;
                height: 1px;
                background-color: #764232;
                transition: 0.2s;
                transform: scaleX(0);
            }

            h3 a:hover:before {
                transform: scaleX(1);
            }

        a {
            text-decoration: none;
            position: relative;
            color: black;
        }

            a::before {
                content: '';
                bottom: 0;
                left: 0;
                position: absolute;
                width: 100%;
                height: 1px;
                background-color: #000;
                transition: 0.2s;
                transform: scaleX(0);
            }

            a:hover:before {
                transform: scaleX(1);
            }

        .table {
            width: 90%;
            border: none;
            margin-bottom: 20px;
            margin: auto;
            opacity: 1;
        }

            .table thead th {
                font-family: "Quicksand";
                border: none;
                padding: 10px 15px;
                background: #764232;
                font-size: 14px;
                border-left: 0px solid #ddd;
                border-right: 0px solid #ddd;
                text-align: center;
            }

            .table tbody td {
                font-family: "Quicksand";
                border-left: 0px solid #ddd;
                border-right: 0px solid #ddd;
                padding: 10px 15px;
                font-size: 14px;
                vertical-align: top;
                background: #F9E2DD;
                text-align: center;
            }

            .table thead tr th:first-child, .table tbody tr td:first-child {
                border-left: none;
            }

            .table thead tr th:last-child, .table tbody tr td:last-child {
                border-right: none;
            }

            .table tbody tr:nth-child(even) {
                background: #f3f3f3;
            }

            .table tfoot th {
                font-family: "Quicksand";
                border: none;
                padding: 10px 15px;
                background: #764232;
                font-size: 14px;
                border-left: 0px solid #ddd;
                border-right: 0px solid #ddd;
                text-align: center;
            }

            .table tfoot td {
                font-family: "Quicksand";
                border-left: 1px solid #ddd;
                border-right: 1px solid #ddd;
                padding: 10px 15px;
                font-size: 14px;
                vertical-align: top;
                background: #F9E2DD;
                text-align: center;
            }

        .whiteBack {
            margin-top: 1%;
            margin-bottom: 1%;
            border-radius: 10px;
            background-color: white;
            width: 80%;
            height: 98%;
            position: absolute;
            left: 10%;
            opacity: 0.7;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;600&display=swap" rel="stylesheet">

</head>
<body>
    <div id="mainanim" class="mainP">
        @*<p>
            <a asp-action="Create">Create New</a>
        </p>*@
        <div class="whiteBack"></div>
        <div style="padding-top: 1%; z-index: 10; width: 80%; margin: auto;">
            <br />
            <h3 style="color: #764232; opacity: 1; font-family: 'Quicksand', sans-serif; text-align: center;">Cart</h3>
            <br />
            <table class="table" border="0">
                <thead style="color: white;">
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Category)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th scope="col">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.ActionLink("+", "AddOneCart", new { dishId = item.DishId })
                                @Html.DisplayFor(modelItem => item.Quantity)
                                @Html.ActionLink("-", "MinusOneCart", new { dishId = item.DishId })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "DeleteOneCart", new { dishId = item.DishId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <h3 style="color: #764232; font-family: 'Quicksand', sans-serif; text-align: center;">Total: @ViewBag.Amount.ToString()</h3>
            <br />
            <h3 asp-action="Menu" style="color: #764232; font-family: 'Quicksand', sans-serif; width: 30%; text-align: center; vertical-align: top; margin: auto;"><a asp-action="Menu">Back</a> ~ <a style="color: #764232;" href="#">@Html.ActionLink("Buy", "NewOrder", new { dishId = -333 })</a></h3>
            <br />
        </div>
    </div>
    <script src="~/js/mainTable.js"></script>
    <script src="~/js/p5.min.js" type="text/javascript"></script>
    <script src="~/js/vanta.topology.min.js" type="text/javascript"></script>

    <script>
        if (localStorage.count % 2 == 0)
            VANTA.TOPOLOGY({
                el: "#mainanim",
                mouseControls: true,
                touchControls: true,
                gyroControls: false,
                minHeight: 1000.00,
                minWidth: 1861.00,
                scale: 1.00,
                scaleMobile: 1.00,
                color: 0x48270c,
                backgroundColor: 0xf0d6b3
            });
        else
            VANTA.TOPOLOGY({
                el: "#mainanim",
                mouseControls: true,
                touchControls: true,
                gyroControls: false,
                minHeight: 1000.00,
                minWidth: 1861.00,
                scale: 1.00,
                scaleMobile: 1.00,
                color: 0x764232,
                backgroundColor: 0x251a11
            });
    </script>
</body>
</html>
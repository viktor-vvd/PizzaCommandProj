@model IEnumerable<PizzaCommandProj.Models.CartItem>

@{
    ViewData["Title"] = "AllCart";
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link rel="stylesheet" href="~/css/BuyPage.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/img/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300&display=swap" rel="stylesheet">
    <style>
        .table {
            width: 80%;
            border: none;
            margin-bottom: 20px;
            margin: auto;
        }

            .table thead th {
                font-family: 'Roboto Condensed', sans-serif;
                border: none;
                padding: 10px 15px;
                background: #764232;
                font-size: 14px;
                border-left: 1px solid #ddd;
                border-right: 1px solid #ddd;
                text-align: center;
            }

            .table tbody td {
                font-family: 'Roboto Condensed', sans-serif;
                border-left: 1px solid #ddd;
                border-right: 1px solid #ddd;
                padding: 10px 15px;
                font-size: 14px;
                vertical-align: top;
                background: #F9E2DD;
                text-align: center;
            }

            .table thead tr th:first-child, .table tbody tr td:first-child {
                border-left: none;
            }

            .table thead tr th:last-child, .table tbody tr td:last-child {
                border-right: none;
            }

            .table tbody tr:nth-child(even) {
                background: #f3f3f3;
            }

            .table tfoot th {
                font-family: 'Roboto Condensed', sans-serif;
                border: none;
                padding: 10px 15px;
                background: #764232;
                font-size: 14px;
                border-left: 1px solid #ddd;
                border-right: 1px solid #ddd;
                text-align: center;
            }

            .table tfoot td {
                font-family: 'Roboto Condensed', sans-serif;
                border-left: 1px solid #ddd;
                border-right: 1px solid #ddd;
                padding: 10px 15px;
                font-size: 14px;
                vertical-align: top;
                background: #F9E2DD;
                text-align: center;
            }

        /*.whiteBack {
            border-radius: 10px;
            background-color: white;
            width: 80%;
            height: 1000px;
            position: absolute;
            left: 100px;
            opacity: 0.7;
        }*/
    </style>
</head>
<body>
    <div id="mainanim" class="mainP">
        @*<p>
                <a asp-action="Create">Create New</a>
            </p>*@
        <div style="padding-top: 100px;">
            @*<div class="whiteBack">*@
            <p style="color: white; font-family: 'Roboto Condensed', sans-serif; font-size: 76px; text-align: center;">Cart</p>
            <table class="table" border="1">
                <thead>
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Category)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th scope="col">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)$
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.ActionLink("+", "AddOneCart", new { dishId = item.DishId })
                                @Html.DisplayFor(modelItem => item.Amount)
                                @Html.ActionLink("-", "MinusOneCart", new { dishId = item.DishId })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "DeleteOneCart", new { dishId = item.DishId })
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th scope="col" colspan="2">Total:</th>
                        <td colspan="2">0.00$</td>
                    </tr>
                </tfoot>
            </table>
            <p asp-action="Menu" style="color: white; font-family: 'Roboto Condensed', sans-serif; font-size: 46px; text-align: right;">Back</p>
        </div>
        </div>
    @*</div>*@
    <script src="~/js/mainTable.js"></script>
    <script src="~/js/p5.min.js" type="text/javascript"></script>
    <script src="~/js/vanta.topology.min.js" type="text/javascript"></script>

    <script>
        if (localStorage.count % 2 == 0)
            VANTA.TOPOLOGY({
                el: "#mainanim",
                mouseControls: true,
                touchControls: true,
                gyroControls: false,
                minHeight: 1000.00,
                minWidth: 1861.00,
                scale: 1.00,
                scaleMobile: 1.00,
                color: 0x48270c,
                backgroundColor: 0xf0d6b3
            });
        else
            VANTA.TOPOLOGY({
                el: "#mainanim",
                mouseControls: true,
                touchControls: true,
                gyroControls: false,
                minHeight: 1000.00,
                minWidth: 1861.00,
                scale: 1.00,
                scaleMobile: 1.00,
                color: 0x764232,
                backgroundColor: 0x251a11
            });
    </script>
</body>
</html>
@model PizzaCommandProj.Models.Order

@{
    ViewData["Title"] = "Confirmed Successfully-Daroco";
}

    <html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <link rel="stylesheet" href="~/css/OrderS.css">

        <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;600&display=swap" rel="stylesheet">

    </head>
    <body>
        <div id="mainanim" class="mainP">
            <div class="content">
                <div class="whiteBack">
                    <h2>Order Confirmed Successfully!</h2>
                    <hr>

                    <div class="svg-wrapper">
                        <svg height="40" width="150" xmlns="http://www.w3.org/2000/svg">
                            <div class="textP">
                            <p>Expect a call from the operator.<br />
                             Delivery will take about 30 minutes</p>
                            </div>
                            <rect id="shape" height="40" width="150" />
                            <div id="text">
                                <a asp-action="Menu">Back to Menu<span class="spot"></span></a>
                            </div>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
            <script src="~/js/p5.min.js" type="text/javascript"></script>
            <script src="~/js/vanta.topology.min.js" type="text/javascript"></script>

            <script>
                VANTA.TOPOLOGY({
                    el: "#mainanim",
                    mouseControls: true,
                    touchControls: true,
                    gyroControls: false,
                    minHeight: 200.00,
                    minWidth: 200.00,
                    scale: 1.00,
                    scaleMobile: 1.00,
                    color: 0x156070,
                    backgroundColor: 0x004352
                })
            </script>
    </body>
    </html>


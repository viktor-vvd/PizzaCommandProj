@model PizzaCommandProj.Models.Order

@{
    ViewData["Title"] = "Confirm Order - Daroco";
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link rel="stylesheet" href="~/css/BuyPage.css">

    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;600&display=swap" rel="stylesheet">

</head>
<body>
    <div id="mainanim" class="mainP">
        <div class="content">
            <div class="whiteBack">
                </br>
                <h1 style="font-family: 'Avenir',sans-serif; font-weight: 100"> <p class="center"><a asp-action="Index" style="color: #764232;">HIDE</a></p></h1>
                <br />
                <h2>Confirm Order</h2>

                <h4>
                    Total: @ViewBag.DishAmount.ToString()
                </h4>
                <hr>
                <form asp-action="NewOrder">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Adress" class="control-label"></label>
                        <input asp-for="Adress" class="form-control" />
                        <span asp-validation-for="Adress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Payment" class="control-label"></label>
                        <select asp-for="Payment" class="form-control">
                            <option value="Card" selected>Card</option>
                            <option value="Cash">Cash</option>
                        </select>
                        @*<input asp-for="Payment" class="form-control" />*@
                        @*<span asp-validation-for="Payment" class="text-danger"></span>*@
                    </div>
                    <div class="svg-wrapper">
                        <svg height="40" width="150" xmlns="http://www.w3.org/2000/svg">
                            <rect id="shape" height="40" width="150" />
                            <div id="text">
                                @*<a href=""> <span class="spot"></span>*@<input type="submit" style="font-size: 18.72px; font-weight: 700; color: #764232;" value="Buy" class="btn from-center" />@*</a>*@
                            </div>
                        </svg>
                    </div>
                </form>

                <div style="padding-top: 10px;">
                    <h3><p class="center"><a asp-action="Menu" style="color: #764232;">Back</a></p></h3>
                </div>
            </div>
        </div>
    </div>
        <script src="~/js/p5.min.js" type="text/javascript"></script>
        <script src="~/js/vanta.topology.min.js" type="text/javascript"></script>

        <script>
            if (localStorage.count % 2 == 0)
                VANTA.TOPOLOGY({
                    el: "#mainanim",
                    mouseControls: true,
                    touchControls: true,
                    gyroControls: false,
                    minHeight: 1000.00,
                    minWidth: 1861.00,
                    scale: 1.00,
                    scaleMobile: 1.00,
                    color: 0x48270c,
                    backgroundColor: 0xf0d6b3
                });
            else
                VANTA.TOPOLOGY({
                    el: "#mainanim",
                    mouseControls: true,
                    touchControls: true,
                    gyroControls: false,
                    minHeight: 1000.00,
                    minWidth: 1861.00,
                    scale: 1.00,
                    scaleMobile: 1.00,
                    color: 0x764232,
                    backgroundColor: 0x251a11
                });
        </script>
</body>
</html>
